<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
	<style name="AnimationPreview">
		<item name="android:windowEnterAnimation">@anim/pop_zoom_enter</item>
		<item name="android:windowExitAnimation">@anim/pop_zoom_exit</item>
	</style>
	
	<style name="main_tab_bottom">
		<item name="android:textSize">@dimen/bottom_tab_font_size</item>
	    <item name="android:textColor">#ff2e3d47</item>
	    <item name="android:ellipsize">marquee</item>
	    <item name="android:gravity">center_horizontal</item>
	    <item name="android:background">@drawable/home_btn_bg2</item>
	    <item name="android:paddingTop">@dimen/bottom_tab_padding_up</item>
	    <item name="android:layout_width">fill_parent</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:button">@null</item>
	    <item name="android:singleLine">true</item>
	    <item name="android:drawablePadding">@dimen/bottom_tab_padding_drawable</item>
	    <item name="android:layout_weight">1.0</item>
    </style>
    
    <style name="query_result_theme">
		<item name="android:textColor">#ff2e3d47</item>
		<item name="android:padding">5dp</item>
		<item name="android:autoLink">all</item>
		<item name="android:weightSum">50</item>
	</style>
	
	<style name="blue_edit" parent="@android:style/Widget.EditText">
		<item name="android:background">@drawable/d</item>
	</style>
	
	<style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    
	<style name="CustomWindowTitleBackground"> 
       <item name="android:background">@drawable/top_bg3</item> 
    </style>

   <style name="test" parent="android:Theme"> 
    <item name="android:windowTitleSize">35dip</item> 
    <item name="android:windowTitleBackgroundStyle">@style/CustomWindowTitleBackground</item> 
   </style>
	
   <!-- GreenDroid UI Tool -->
   	<style name="GreenDroid" />
	<style name="GreenDroid.Widget" />
	
	<style name="GreenDroid.Widget.QuickAction" />
	<style name="GreenDroid.Widget.QuickAction.Bar" />
	<style name="GreenDroid.Widget.QuickAction.Grid">
		<item name="android:padding">5dp</item>
		<item name="android:listSelector">@drawable/gd_quick_action_grid_selector</item>
		<item name="android:background">@drawable/gd_quick_action_grid_bg</item>
		<item name="android:gravity">center</item>
		<item name="android:fadingEdgeLength">0dp</item>
		<item name="android:stretchMode">columnWidth</item>
		<item name="android:verticalSpacing">7dp</item>
		<item name="android:numColumns">4</item>
		<item name="android:layout_marginLeft">5dip</item>
		<item name="android:layout_marginRight">5dip</item>
	</style>
	
	<style name="GreenDroid.Widget.QuickAction.Item">
		<item name="android:layout_height">fill_parent</item>
		<item name="android:paddingRight">8dp</item>
		<item name="android:paddingLeft">8dp</item>
		<item name="android:drawablePadding">5dp</item>
		<item name="android:textSize">12sp</item>
		<item name="android:textColor">#333</item>
	</style>
	<style name="GreenDroid.Widget.QuickAction.Bar.Item" parent="@style/GreenDroid.Widget.QuickAction.Item">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:minWidth">80dp</item>
		<item name="android:background">@drawable/gd_quick_action_bar_item</item>
	</style>
	<style name="GreenDroid.Widget.QuickAction.Grid.Item" parent="@style/GreenDroid.Widget.QuickAction.Item">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">65dp</item>
	</style>
	   
	<!-- GreenDroid PopDownMenu -->
	<style name="GreenDroid.Animation" />
	
	<style name="GreenDroid.Animation.PopDown" />
	<style name="GreenDroid.Animation.PopDown.Left">
		<item name="@android:windowEnterAnimation">@anim/gd_grow_from_topleft_to_bottomright</item>
		<item name="@android:windowExitAnimation">@anim/gd_shrink_from_bottomright_to_topleft</item>
	</style>
	<style name="GreenDroid.Animation.PopDown.Right">
		<item name="@android:windowEnterAnimation">@anim/gd_grow_from_topright_to_bottomleft</item>
		<item name="@android:windowExitAnimation">@anim/gd_shrink_from_bottomleft_to_topright</item>
	</style>
	<style name="GreenDroid.Animation.PopDown.Center">
		<item name="@android:windowEnterAnimation">@anim/gd_grow_from_top</item>
		<item name="@android:windowExitAnimation">@anim/gd_shrink_from_bottom</item>
	</style>
	
	<style name="GreenDroid.Animation.PopUp" />
	<style name="GreenDroid.Animation.PopUp.Left">
		<item name="@android:windowEnterAnimation">@anim/gd_grow_from_bottomleft_to_topright</item>
		<item name="@android:windowExitAnimation">@anim/gd_shrink_from_topright_to_bottomleft</item>
	</style>
	<style name="GreenDroid.Animation.PopUp.Right">
		<item name="@android:windowEnterAnimation">@anim/gd_grow_from_bottomright_to_topleft</item>
		<item name="@android:windowExitAnimation">@anim/gd_shrink_from_topleft_to_bottomright</item>
	</style>
	<style name="GreenDroid.Animation.PopUp.Center">
		<item name="@android:windowEnterAnimation">@anim/gd_grow_from_bottom</item>
		<item name="@android:windowExitAnimation">@anim/gd_shrink_from_top</item>
	</style>
    
   <!-- 搜索 -->
	<style name="btn_search_style">
		<item name="android:layout_alignParentRight">true</item>
		<item name="android:layout_centerVertical">true</item>
		<item name="android:layout_marginLeft">10dip</item>
		<item name="android:layout_width">34px</item>
		<item name="android:layout_height">34px</item>
	</style>
	

	<style name="dialog_style" parent="@android:style/Theme.Dialog">
		<item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item> 
        <item name="android:windowBackground">@color/transparent</item>       
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
	</style>

</resources>
